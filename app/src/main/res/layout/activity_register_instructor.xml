<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:background="#004584"
    tools:context=".RegisterInstructor">

    <TextView
        android:layout_marginTop="100dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Register Instructor"
        android:textAlignment="center"
        android:textSize="36dp"
        android:textColor="#FFDF35"
        android:fontFamily="@font/bungee"
        android:layout_marginBottom="50dp"
        />

    <EditText
        android:id="@+id/txt_instructorFirstName"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:textSize="18dp"
        android:hint="Enter First Name"
        android:background="@color/white"
        android:layout_marginBottom="25dp"
        android:inputType="text"
        android:maxLines="1"
        />



    <EditText
        android:id="@+id/txt_instructorLastName"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:textSize="18dp"
        android:hint="Enter First Name"
        android:background="@color/white"
        android:layout_marginBottom="25dp"
        android:inputType="text"
        android:maxLines="1"

        />




    <EditText
        android:id="@+id/txt_InstructorPhone"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:textSize="18dp"
        android:hint="Enter Phone Number"
        android:background="@color/white"
        android:layout_marginBottom="50dp"
        android:inputType="text"
        android:maxLines="1"
        />
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        >

        <Button
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:text="Back"
            android:textSize="24dp"
            android:gravity="center"
            android:fontFamily="@font/bungee"
            android:textColor="@color/black"
            android:backgroundTint="#FFDF35"
            android:layout_marginRight="25dp"
            android:onClick="goBack"
            />

        <Button
            android:id="@+id/btn_regUser_next"
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:text="Save"
            android:textSize="24dp"
            android:gravity="center"
            android:fontFamily="@font/bungee"
            android:textColor="@color/black"
            android:backgroundTint="#FFDF35"
            android:layout_marginLeft="25dp"
            android:onClick="saveInstructor"
            />



    </LinearLayout>

</LinearLayout>