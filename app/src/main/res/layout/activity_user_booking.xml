<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#004584"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".UserBooking1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">


        <TextView
            android:id="@+id/txt_userbooking_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="25dp"
            android:text="Select Date"
            android:fontFamily="@font/bungee"
            android:textColor="#FFDF35"
            android:textSize="36dp" />

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:onClick="openCalendar"
            android:src="@drawable/ic_calender_foreground"/>


    </LinearLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:layout_marginRight="25dp"
            android:backgroundTint="#FFDF35"
            android:fontFamily="@font/bungee"
            android:gravity="center"
            android:onClick="userBookingBack"
            android:text="Back"
            android:textColor="@color/black"
            android:textSize="24dp" />

        <Button
            android:id="@+id/btn_confirmDate"
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:layout_marginLeft="25dp"
            android:backgroundTint="#FFDF35"
            android:fontFamily="@font/bungee"
            android:gravity="center"
            android:onClick="openConfirmBooking"
            android:text="NEXT"
            android:textColor="@color/black"
            android:textSize="24dp" />


    </LinearLayout>


</LinearLayout>